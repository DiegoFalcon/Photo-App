<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">PhotoApp</a>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Newsfeed", "#"  %></li>
        <li><%= link_to "New Post", new_post_path %></li>
        <li><%= link_to "New Photo", new_image_path  %></li>
      </ul>
    <% if current_user %>
      <ul class = "nav navbar-right">
        <li class = "col-md-2">
          <% if current_user.profile_picture %>
          <%= image_tag current_user.profile_picture, size:"50x50" %>
          <% else %>
          <%= image_tag 'default_pp.png', size: "50x50" %>
          <% end %>
        </li>
        <li class = "col-md-6">
          <%= link_to current_user.username ? current_user.username : current_user.email, edit_user_registration_path %>
        </li>
        <li class = "col-md-4 logout">
          <%= link_to "Log out", destroy_user_session_path, class: "btn btn-xs btn-danger",
              :method => :delete %>
        </li>
      </ul>
    <% else %>
    <ul class = "nav navbar-right">
      <li>
        <%= link_to "Log in", new_user_session_path, class: "btn btn-primary" %>
      </li>
    </ul>
    <% end %>
    </div>
  </div>
</div>
